{
    "compilerOptions": {
      "target": "es2018",            // Specify the target ECMAScript version
      "module": "commonjs",          // Specify module system (CommonJS for Node.js)
      "lib": ["es2018"],             // Specify the library files to include
      "outDir": "dist",              // Specify the output directory for compiled files
      "rootDir": "src",              // Specify the root directory for source files
      "strict": true,                // Enable strict type-checking
      "esModuleInterop": true,       // Enable interoperability between CommonJS and ES modules
      "resolveJsonModule": true,     // Enable importing JSON modules
      "declaration": true,           // Generate declaration files (.d.ts)
      "sourceMap": true,              // Generate source maps for debugging
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src"],              // Specify the files to include for compilation
    "exclude": ["node_modules"],      // Specify the files to exclude from compilation
  }
  